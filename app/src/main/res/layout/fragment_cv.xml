<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraint_cv"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/titre_stage2"
            android:text="@string/curriculum_vitae"
            android:textSize="38sp"
            android:textColor="#FE937C"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:layout_width="400dp"
            android:layout_height="800dp"
            app:layout_constraintTop_toBottomOf="@id/titre_stage2"
            app:layout_constraintBottom_toBottomOf="@id/constraint_cv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:src="@drawable/cv"/>
</androidx.constraintlayout.widget.ConstraintLayout>