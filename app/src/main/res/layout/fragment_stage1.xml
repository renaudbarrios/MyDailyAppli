<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
            android:id="@+id/scrollname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_stage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                    android:id="@+id/titre_stage2"
                    android:text="@string/stage_n_1"
                    android:textSize="50sp"
                    android:textColor="#FE937C"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:focusable="true"/>
            <TextView
                    android:id="@+id/nav_accueil"
                    android:text="@string/presentation_stage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/titre_stage2"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_2"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:src="@drawable/a1quizz"
                    app:layout_constraintTop_toBottomOf="@id/nav_accueil"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a1ere"
                    app:layout_constraintTop_toBottomOf="@id/image_2"
                    app:layout_constraintLeft_toLeftOf="parent"/>
        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a2nd"
                    app:layout_constraintTop_toBottomOf="@id/image_3"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a2nd2"
                    app:layout_constraintTop_toBottomOf="@id/image_4"
                    app:layout_constraintLeft_toLeftOf="parent"/>
        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_6"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a2nd3"
                    app:layout_constraintTop_toBottomOf="@id/image_5"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_7"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a3e1"
                    app:layout_constraintTop_toBottomOf="@id/image_6"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_8"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a3e2"
                    app:layout_constraintTop_toBottomOf="@id/image_7"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_9"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a3e3"
                    app:layout_constraintTop_toBottomOf="@id/image_8"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_10"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a3e4"
                    app:layout_constraintTop_toBottomOf="@id/image_9"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_11"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a3e4"
                    app:layout_constraintTop_toBottomOf="@id/image_9"
                    app:layout_constraintLeft_toLeftOf="parent"/>

        <com.zolad.zoominimageview.ZoomInImageView
                    android:id="@+id/image_12"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/a3e5"
                    app:layout_constraintTop_toBottomOf="@id/image_10"
                    app:layout_constraintLeft_toLeftOf="parent"/>
        <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/schema"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/schema"
                app:layout_constraintTop_toBottomOf="@id/image_12"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/azert"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/azert1"
                app:layout_constraintTop_toBottomOf="@id/schema"
                app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

